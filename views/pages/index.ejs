<div class="main-wrapper">
  <div class="container">
    <h2>Add a new item</h2>
    <form action="/addtodo" method="POST" class="create-form" novalidate>
      <div class="form-control">
        <input
          class="input"
          type="text"
          name="newtodo"
          id="newtodo"
          placeholder="write something..."
        />
        <button type="submit" id="submit">Create new item</button>
        <span role="alert" id="todoError" aria-hidden="true">
          Please write something
        </span>
      </div>
    </form>
    <hr />
    <h2>Todos</h2>
    <form action="/movetodo" method="POST">
      <ul>
        <% for( let i = 0; i < todoList.length; i++){ %>
        <li class="list">
          <input type="checkbox" name="check" value="<%= todoList[i].todo %>" />
          <%= todoList[i].todo %>
        </li>
        <% } %>
      </ul>
      <button type="submit">Move checked items</button>
    </form>
    <hr />
    <h2>Completed</h2>
    <form action="/deletetodo" method="POST">
      <ul>
        <% for(let i = 0; i < completeList.length; i++){ %>
        <li class="list">
          <input
            type="checkbox"
            name="complete"
            checked
            value="<%= completeList[i].complete %>"
          />
          <%= completeList[i].complete %>
        </li>
        <% } %>
      </ul>
      <button class="delete-btn" formaction="/deletetodo" type="submit">
        Delete checked items
      </button>
    </form>
    <div class="show-hide">
      <p class="alert">No item to delete!</p>
      <button class="alert-btn">Ok</button>
    </div>
  </div>
</div>

<script src="static/js/validation.js"></script>
